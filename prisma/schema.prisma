generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  compasses Compass[] @relation("UserCompasses")
}

model Compass {
  id     String @id @default(cuid())
  name   String
  user   User   @relation("UserCompasses", fields: [userId], references: [id])
  userId String
  value  Int

  @@unique([userId, name], name: "unique_compass_name_per_user")
  @@index([userId], name: "userId")
}
